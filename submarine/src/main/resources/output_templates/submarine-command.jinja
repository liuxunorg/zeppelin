<div id="job-manager-header">
  <div class="header">
    <div class="row" style="width:100%">
      <div class="col-md-12">
        <h3 class="new_h3">
          Submarine
        </h3>
      </div>
    </div>
    <div class="row" style="width:100%">
      <div class="col-md-12">
        You can execute the selected command by entering the parameters in the interface below. <a
          ng-click="z.angularBind('COMMAND_TYPE','help','{{ PARAGRAPH_ID }}');
          z.runParagraph('{{ PARAGRAPH_ID }}')">HELP</a>
      </div>
    </div>
  </div>

  <hr style="margin-top: 10px; margin-bottom: 10px;"/>

  <div class="row" style="width:100%">
    <div class="job-search-tool">
      <div class="form-inline">
        <span class="btn-group">
          <label style="width:140px;text-align:right;margin-right:4px;">Command: </label>
          <select ng-model="submarineCommand" style="width:200px;margin-right:10px" class="form-control">
            <option value="">-- Please select --</option>
            <option value="job run">RUN JOB</option>
            <option value="old ui">OLD UI</option>
            <option value="help">HELP</option>
          </select>
        </span>
        <button type="submit" class="btn btn-primary"
                ng-click="z.angularBind('COMMAND_TYPE',submarineCommand,'{{ PARAGRAPH_ID }}');
                z.angularBind('INPUT_PATH',inputPath,'{{ PARAGRAPH_ID }}');
                z.angularBind('CHECKPOINT_PATH',checkpointPath,'{{ PARAGRAPH_ID }}');
                z.angularBind('PS_LAUNCH_CMD',psLaunchCmd,'{{ PARAGRAPH_ID }}');
                z.angularBind('WORKER_LAUNCH_CMD',workerLaunchCmd,'{{ PARAGRAPH_ID }}');
                z.runParagraph('{{ PARAGRAPH_ID }}')">
          Run Command
        </button>
      </div>
    </div>
  </div>
</div>

<form class="form-inline" style="margin-top: 10px;">
  <div class="form-group">
    <label style="width:140px;text-align:right;margin-right:4px;">Data Path: </label>
    <input type="text" style="width:800px" class="form-control" id="inputPath"
           placeholder="Please input data path ( eg. hdfs://cluster1/... )" ng-model="inputPath"></input>
  </div>
</form>

<form class="form-inline" style="margin-top: 10px;">
  <div class="form-group">
    <label style="width:140px;text-align:right;margin-right:4px;">Checkpoint path: </label>
    <input type="text" style="width:800px" class="form-control" id="checkpointPath"
           placeholder="Please input checkpoint data path ( eg. hdfs://cluster1/... )"
           ng-model="checkpointPath"></input>
  </div>
</form>

<form class="form-inline" style="margin-top: 10px;">
  <div class="form-group">
    <label style="width:140px;text-align:right;margin-right:4px;">PS launch cmd: </label>
    <input type="text" style="width:800px" class="form-control" id="psLaunchCmd"
           placeholder="Please input PS launch command (eg. python cifar10_main.py --data-dir=%input_path% --job-dir=%checkpoint_path% --num-gpus=0 ...)"
           ng-model="psLaunchCmd"></input>
  </div>
</form>

<form class="form-inline" style="margin-top: 10px;">
  <div class="form-group">
    <label style="width:140px;text-align:right;margin-right:4px;">Worker launch cmd: </label>
    <input type="text" style="width:800px" class="form-control" id="workerLaunchCmd"
           placeholder="Please input Work launch command (eg. python cifar10_main.py --data-dir=%input_path% --job-dir=%checkpoint_path% --num-gpus=1 ...)"
           ng-model="workerLaunchCmd"></input>
  </div>
</form>
