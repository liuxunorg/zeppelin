FROM 10.120.196.232:5000/gpu-cuda9.0-tf1.8.0-with-models-7
MAINTAINER Apache Software Foundation <dev@zeppelin.apache.org>

# `Z_VERSION` will be updated by `dev/change_zeppelin_version.sh`
ENV Z_VERSION="0.9.0-SNAPSHOT"
ENV LOG_TAG="[ZEPPELIN_${Z_VERSION}]:" \
    Z_HOME="/zeppelin" \
    LANG=en_US.UTF-8 \
    LC_ALL=en_US.UTF-8

COPY zeppelin-${Z_VERSION}.tar.gz /zeppelin-${Z_VERSION}.tar.gz

RUN tar zxvf /zeppelin-${Z_VERSION}.tar.gz && \
    chmod 777 -R /zeppelin-${Z_VERSION} && \
    ln -s zeppelin-${Z_VERSION} ${Z_HOME} && \
    rm /zeppelin-${Z_VERSION}.tar.gz

EXPOSE 8080
EXPOSE 29914
